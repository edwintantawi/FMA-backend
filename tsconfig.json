{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["./*"],
      "@models/*": ["models/*"],
      "@views/*": ["views/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@helpers/*": ["helpers/*"],
      "@config/*": ["config/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "__tests_/**/*.ts"],
  "exclude": ["node_modules"]
}
